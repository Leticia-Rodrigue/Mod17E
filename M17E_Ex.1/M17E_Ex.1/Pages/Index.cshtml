@page
@model IndexModel
@{
    ViewData["Title"] = "Início";
}

<style>
    :root {
        --bg: #0e0f14;
        --text: #eaeaea;
        --accent: #ff4fb2;
        --accent-2: #6cf0ff;
        --card-bg: rgba(255, 255, 255, 0.05);
    }

    body {
        background: radial-gradient(circle at 20% 0%, #1b1e29 0%, var(--bg) 70%);
        color: var(--text);
        font-family: "Inter", sans-serif;
        margin: 0;
    }

    /* Container Principal */
    .hero-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 60px 20px;
        text-align: center;
    }

    /* Título com Gradiente */
    .display-4 {
        font-size: clamp(3rem, 8vw, 5rem); /* Tamanho responsivo */
        font-weight: 900;
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 10px;
    }

    .lead-text {
        font-size: 1.2rem;
        color: #b0b0b0;
        max-width: 600px;
        margin: 0 auto 40px;
    }

    /* Estilo da Imagem Principal */
    .main-banner {
        position: relative;
        display: inline-block;
        border-radius: 24px;
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        line-height: 0; /* Remove espaço extra abaixo da imagem */
    }

        .main-banner:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(255, 79, 178, 0.2);
        }

        .main-banner img {
            width: 100%;
            max-width: 1000px;
            height: auto;
        }

    /* Seção de Features (Abaixo da imagem) */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 50px;
    }

    .feature-card {
        background: var(--card-bg);
        padding: 30px;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        transition: 0.3s;
    }

        .feature-card:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .feature-card h3 {
            color: var(--accent-2);
            margin-top: 0;
        }
</style>

<div class="hero-container">
    <header>
        <h1 class="display-4">KPopVerse</h1>
        <p class="lead-text">Explora o universo visual e sonoro dos teus grupos favoritos. Informação detalhada e a história do fenómeno global.</p>
    </header>

    <div class="main-banner">
        <a href="/Kpop">
            <img src="~/Blackpink.jpg" alt="Blackpink Banner" />
        </a>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <h3>Grupos</h3>
            <p>Descobre perfis detalhados de cada idol e grupo.</p>
        </div>
        <div class="feature-card">
            <h3>História</h3>
            <p>Como o K-Pop conquistou o mundo, desde a 1ª geração.</p>
        </div>
        <div class="feature-card">
            <h3>Novidades</h3>
            <p>Fica a par dos últimos comebacks e debuts.</p>
        </div>
    </div>
</div>