@page
@model IndexModel
@{
    ViewData["Title"] = "Início";
}
<style>
    :root {
        --bg: #0e0f14;
        --text: #eaeaea;
        --accent: #ff4fb2;
        --accent-2: #6cf0ff;
    }

    body {
        background: radial-gradient(1000px 600px at 20% 0%, #1b1e29 0%, var(--bg) 60%);
        color: var(--text);
        font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
    }

    .page {
        max-width: 960px;
        margin: 0 auto;
        padding: 32px 20px 60px;
    }

    .text-center {
        text-align: center;
    }

    .display-4 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -0.02em;
        margin: 24px 0 16px;
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: -31px;
    }

    p {
        font-size: 1rem;
        max-width: 100ch;
        margin: 55px auto;
        text-align: justify;
    }

    .kpop-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 22px;
        margin-top: 24px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
    }
</style>
<div class="text-center">
    <h1 class="display-4">KPopVerse</h1>
    <p>Seja bem-vindo ao nosso site. Aqui vais ter muita informação e também a história sobre grupos de K-pop.</p>
        <a href="/Kpop">
            <img src="~/Blackpink.jpg" alt="Logo" class="img-fluid" style="width: 1063px;" />
        </a>

   

</div>
