<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - M17E_Ex._1</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/M17E_Ex._1.styles.css" asp-append-version="true" />

    <!-- 🌸 CSS PERSONALIZADO -->
    <style>
        /* Reseta margens e define fonte base */
        nav.navbar {
            padding: 15px 35px !important;
            background: #ae87e6b2 !important;
            border-bottom: 1px solid #e8e8e8;
        }

        /* Nome do site */
        .navbar-brand {
            font-size: 22px;
            font-weight: 600;
            color: #000 !important;
        }

        /* Links do menu */
        .navbar-nav .nav-link {
            font-size: 17px;
            font-weight: 500;
            color: #444 !important;
            margin-left: 20px;
            transition: 0.3s;
        }

            /* Hover bonito */
            .navbar-nav .nav-link:hover {
                color: #af00ff !important; /* rosa estilo k-pop */
                transform: translateY(-2px);
            }

            /* Ao passar o rato no item ativo */
            .navbar-nav .nav-link.active,
            .navbar-nav .nav-link:focus {
                color: #af00ff !important;
                font-weight: 600;
            }

            /* Hover bonito */
            .navbar-nav .nav-link:hover {
                color: #af00ff !important; /* rosa estilo k-pop */
                transform: translateY(-2px);
            }

            /* Ao passar o rato no item ativo */
            .navbar-nav .nav-link.active,
            .navbar-nav .nav-link:focus {
                color: #af00ff !important;
                font-weight: 600;
            }
        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Nome do site -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">M17E_Ex._1</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Início</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Kpop">Grupos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Historia">História</a>
                        </li>

                        <!-- AQUI ADICIONAS A NOVA PÁGINA -->
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Login/Registar</a>
                        </li>
                        

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - M17E_Ex._1
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
