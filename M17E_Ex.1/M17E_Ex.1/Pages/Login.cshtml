@page
@model M17E_Ex._1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    :root {
        --bg: #0e0f14;
        --accent: #ff4fb2;
        --accent-2: #6cf0ff;
        --glass: rgba(255, 255, 255, 0.05);
    }

    /* Fundo radial consistente com o Index e Contact */
    body {
        background: radial-gradient(circle at 20% 0%, #1b1e29 0%, var(--bg) 70%);
        color: white;
        font-family: "Inter", sans-serif;
    }

    .auth-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        padding: 20px;
    }

    /* Cartão com o efeito de vidro e bordas do Index */
    .auth-split-card {
        display: flex;
        width: 100%;
        max-width: 1100px;
        min-height: 550px;
        background: var(--glass);
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        box-shadow: 0 25px 50px rgba(0,0,0,0.4);
    }

    /* Painel Esquerdo: O destaque visual rosa/roxo */
    .panel-left {
        flex: 1;
        background: linear-gradient(135deg, #ff4fb2 0%, #af00ff 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 60px;
        text-align: center;
        color: white;
    }

    /* Painel Direito: O formulário escuro e limpo */
    .panel-right {
        flex: 1.2;
        background: rgba(14, 15, 20, 0.85);
        padding: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .auth-title {
        font-size: 3rem;
        font-weight: 900;
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 10px;
    }

    .subtitle {
        color: #b0b0b0;
        margin-bottom: 35px;
        font-size: 1.1rem;
    }

    /* Inputs idênticos aos cartões do Index */
    .form-control-kpop {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 15px 20px;
        border-radius: 12px;
        color: white;
        margin-bottom: 15px;
        width: 100%;
        font-size: 1rem;
        transition: 0.3s;
    }

    .form-control-kpop:focus {
        border-color: var(--accent-2);
        outline: none;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 15px rgba(108, 240, 255, 0.1);
    }

    /* Botão com o gradiente neon do botão de Login original */
    .btn-kpop-main {
        background: linear-gradient(45deg, var(--accent), #af00ff);
        color: white;
        border: none;
        padding: 16px 45px;
        border-radius: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: 0.4s;
        width: 100%;
        margin-top: 15px;
    }

    .btn-kpop-main:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(255, 79, 178, 0.3);
    }

    .btn-outline-white {
        background: transparent;
        border: 2px solid white;
        color: white;
        padding: 14px 40px;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
    }

    .btn-outline-white:hover {
        background: white;
        color: #af00ff;
    }

    .forgot-password {
        color: var(--accent-2);
        font-size: 0.9rem;
        text-decoration: none;
        margin-top: 10px;
        text-align: center;
        display: block;
        opacity: 0.8;
    }

    .forgot-password:hover {
        opacity: 1;
        text-decoration: underline;
    }
</style>

<div class="auth-page-wrapper">
    <div class="auth-split-card">
        
        <div class="panel-left">
            <h2 style="font-size: 2.8rem; font-weight: 800; margin-bottom: 20px;">Olá de novo!</h2>
            <p style="margin-bottom: 40px; font-size: 1.1rem; opacity: 0.9;">
                Ainda não fazes parte da nossa comunidade? Regista-te agora para não perderes nada.
            </p>
            <a asp-page="/Contact" class="btn-outline-white">CRIAR CONTA</a>
        </div>

        <div class="panel-right">
            <h2 class="auth-title">Login</h2>
            <p class="subtitle">Introduz os teus dados para entrar.</p>

            <form method="post">
                <input type="email" class="form-control-kpop" placeholder="E-mail" required>
                <input type="password" class="form-control-kpop" placeholder="Palavra-passe" required>
                
                <button type="submit" class="btn-kpop-main">ENTRAR NO KPOPVERSE</button>
                
                <a href="#" class="forgot-password">Esqueceste-te da palavra-passe?</a>
            </form>
        </div>

    </div>
</div>