@page
@model M17E_Ex._1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
/* CSS opcional, pode colocar o seu estilo existente */
body {
    background: radial-gradient(circle at 20% 0%, #1b1e29 0%, #0e0f14 70%);
    color: white;
    font-family: "Inter", sans-serif;
}
.auth-page-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 85vh;
    padding: 20px;
}
.auth-split-card {
    display: flex;
    width: 100%;
    max-width: 1100px;
    min-height: 550px;
    background: rgba(255,255,255,0.05);
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(15px);
    box-shadow: 0 25px 50px rgba(0,0,0,0.4);
}
.panel-left {
    flex: 1;
    background: linear-gradient(135deg, #ff4fb2 0%, #af00ff 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 60px;
    text-align: center;
    color: white;
}
.panel-right {
    flex: 1.2;
    background: rgba(14,15,20,0.85);
    padding: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.form-control-kpop {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 15px 20px;
    border-radius: 12px;
    color: white;
    margin-bottom: 15px;
    width: 100%;
    font-size: 1rem;
}
.btn-kpop-main {
    background: linear-gradient(45deg, #ff4fb2, #af00ff);
    color: white;
    border: none;
    padding: 16px 45px;
    border-radius: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: 0.4s;
    width: 100%;
    margin-top: 15px;
}
.btn-kpop-main:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(255,79,178,0.3);
}
</style>

<div class="auth-page-wrapper">
    <div class="auth-split-card">
        <div class="panel-left">
            <h2>Olá de novo!</h2>
            <p>Ainda não fazes parte da nossa comunidade? Regista-te agora.</p>
            <a asp-page="/Register" class="btn-outline-white">CRIAR CONTA</a>
        </div>

        <div class="panel-right">
            <h2 class="auth-title">Login</h2>
            <p class="subtitle">Introduz os teus dados para entrar.</p>

            <form method="post">
                <!-- Inputs corrigidos com asp-for -->
                <input asp-for="Email" type="email" class="form-control-kpop" placeholder="E-mail" required />
                <input asp-for="Password" type="password" class="form-control-kpop" placeholder="Palavra-passe" required />

                <button type="submit" class="btn-kpop-main">ENTRAR NO KPOPVERSE</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p style="color:red">@Model.ErrorMessage</p>
            }
        </div>
    </div>
</div>
